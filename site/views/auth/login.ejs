<%- include('../partials/header'); %>

  <script src="/js/login.js"></script>

    <section class="principal">

      <article class="black-section" id="div-login">
        <h2>Ingresa a Movies Drop</h2>
         
        <form class="forms form-login" action="" method="POST">
            <div class="form-group">
              <label class="" for="rating">Email</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text">@</div>
                </div>
                <input type="text" class="form-control <%= errors.email ? 'is-invalid' : ''%>" id="email" placeholder="Email" name="email" value="<%= body.email ? body.email : ''%>">
                <div class="invalid-feedback"><%= errors.email ? errors.email.msg : ''%></div>
              </div>
            </div>
            <div class="form-group">
              <label class="" for="password">Password</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div id="pass-mostrar" class="input-group-text"><i class="fas fa-user-lock"></i></div>
                </div>
                <input type="password" class="form-control <%= errors.password ? 'is-invalid' : ''%>" id="password" placeholder="Password" name="password">
                <div class="invalid-feedback"><%= errors.password ? errors.password.msg : ''%></div>
              </div>
            </div>

            <div class="form-group ">
              <input type="checkbox" name="mantenerme" id="mantenerme">
              <label class="" for="mantenerme">Martenerme logeado</label>
            </div>
            
            
            <div class="separate-buttons">
                <button type="submit" class="btn btn-success btn-block">Ingresa</button>
            </div>

            <div class="separate-buttons">
                <a href="http://www.google.com" id="boton-google" class="btn btn-danger">Con Google</a>
                <a href="http://www.facebook.com" class="btn btn-primary">Con FB</a>
            </div>

            <div>
              Tambien el texto
              <button type="button" class="btn btn-danger" id="eliminarme">Eliminarme</button>
            </div>

            <div>
              Crono
              <span id="numeros">0</span>
              <button type="button" class="btn btn-primary" id="iniciar">Play</button>
            </div>
        </form>
            

      </article>


    </section>


  </div>

<%- include('../partials/footer'); %>