<%- include('../partials/header'); %>

<link rel="stylesheet" href="/css/forms/register.css">

    <section class="principal">

      <article class="black-section" id="div-register">
        <h2>Unete a Movies Drop</h2>
         
        <form class="forms form-register" action="" method="POST" enctype="multipart/form-data">
            <div class="form-group ">
              <label class="" for="title">Nombre</label>
              <input type="text" class="form-control <%= errors.name ? 'is-invalid' : ''%>" id="name" placeholder="Nombre" name="name" value="<%= body.name ? body.name : ''%>">
              <div class="invalid-feedback"><%= errors.name ? errors.name.msg : ''%></div>
            </div>
            <div class="form-group ">
              <label class="" for="rating">Email</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text">@</div>
                </div>
                <input type="text" class="form-control <%= errors.email ? 'is-invalid' : ''%>" id="email" placeholder="Email" name="email" value="<%= body.email ? body.email : ''%>">
                <div class="invalid-feedback"><%= errors.email ? errors.email.msg : ''%></div>
              </div>
            </div>
            <div class="form-group ">
              <label class="" for="password">Password</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-user-lock"></i></div>
                </div>
                <input type="password" class="form-control <%= errors.password ? 'is-invalid' : ''%>" id="password" placeholder="Password" name="password">
                <div class="invalid-feedback"><%= errors.password ? errors.password.msg : ''%></div>
              </div>
            </div>
            <div class="form-group ">
                <label class="" for="c-password">Confirm Password</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-user-lock"></i></div>
                  </div>
                  <input type="password" class="form-control" id="c-password" placeholder="Confirm Password" name="c_password">
                </div>
              </div>
            <div class="">
              <label class="" for="poster">Avatar</label>
              <div class="">
                <input type="file" class=" <%= errors.avatar ? 'is-invalid' : ''%>" id="poster" name="avatar">
                <label class="custom-file-label" for="avatar">Selecciona una imagen</label>
                <div class="invalid-feedback"><%= errors.avatar ? errors.avatar.msg : ''%></div>
              </div>
              <div id="photo-preload">
                <img src="" alt="Preview">
              </div>
            </div>
            
            <div class="separate-buttons">
              <button type="submit" class="btn btn-success btn-block">Empecemos <i class="fas fa-paper-plane"></i></button>
            </div>
        </form>
            

      </article>


    </section>

    <script src="/js/register.js"></script>
  </div>

<%- include('../partials/footer'); %>