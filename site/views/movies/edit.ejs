<%- include('../partials/header'); %>

<link rel="stylesheet" href="/css/movies/forms.css">

    <section class="principal">

      <article class="black-section" id="">
        <h2>Editar Pelicula</h2>
         
        <form method="POST" action="/movies/<%= movie.id %>?_method=PUT" enctype="multipart/form-data">
          <div class="form-movie">
            <div class="form-group ">
              <label class="" for="title">Title</label>
              <input type="text" class="form-control" id="title" placeholder="Title" name="title" value="<%= movie.title %>">
            </div>
            <div class="form-group ">
              <label class="" for="rating">Rating</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-star star-rating"></i></div>
                </div>
                <input type="number" class="form-control" id="rating" placeholder="Rating" name="rating" value="<%= movie.rating %>">
              </div>
            </div>

            <div class="form-group ">
              <label class="" for="awards">Awards</label>
              <input type="number" class="form-control" id="awards" placeholder="awards" name="awards" value="<%= movie.awards %>">
            </div>

            <div class="form-group ">
              <label class="" for="length">length</label>
              <input type="number" class="form-control" id="length" placeholder="length" name="length" value="<%= movie.length %>">
            </div>

            <div class="form-group ">
              <label class="" for="releaseDate">Release Date</label>
              <input type="date" class="form-control" id="releaseDate" placeholder="releaseDate" name="releaseDate" value="<%= movie.releaseDate %>">
            </div>
            
            <div class="form-group ">
              <label class="" for="genre">GÃ©nero</label>
              <select name="genreId" id="genre" class="form-control">
                <option value="">--Seleccione--</option>
                <% for(let genre of genres ) { %>
                  <option value="<%= genre.id %>" 
                    <% if (movie.genreId == genre.id) {%> selected <% } %>><%= genre.name %></option>
                <% } %>
              </select>
            </div>

            <div class="form-group ">
              <label class="" for="description">Descripcion</label>
              <textarea name="description" id="description" class="form-control"><%= movie.description %></textarea>
            </div>

            <div class="">
              <label class="" for="poster">Poster</label>
              <img src="<%= '/img/movies' + movie.poster %>" alt="">
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="poster" name="poster">
                <label class="custom-file-label" for="poster">Selecciona una imagen</label>
                <div class="invalid-feedback">Aqui el error</div>
              </div>
            </div>
          </div>
           
            
            <div class="separate-buttons">
              <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
            

      </article>


    </section>


  </div>

<%- include('../partials/footer'); %>