<%- include('../partials/header'); %>

<link rel="stylesheet" href="/css/movies/index.css">

    <section class="principal">

      <article class="black-section" id="peliculas">

        <div class="titulos">
          <h2>Listado de Peliculas</h2>
          <div>
            <span>Ordenar:</span>
            <a href="?order=title">Titulo</a>
            <a href="?order=rating">Rating</a>
          </div>

          <nav aria-label="Page navigation"></nav>
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <% for (let i = 1; i <= pages; i++) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
              <% } %>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
          
          <div>
            <a href="/movies/create" class="btn btn-primary"><i class="fas fa-plus"></i></a>
          </div>
        </div>
        
        <div class="peliculas">

          <% for(let movie of movies) { %>

            <%- include('item-movie', { movie }) %>
          
          <% } %>

        </div>

      </article>

  </div>

  <script src="/js/movies-list.js"></script>

<%- include('../partials/footer'); %>